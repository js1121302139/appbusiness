@import "../common";
.topBar("../../../img/topBack-ico.png");
html {
    background: #fff;
}

.mui-content {
    background: #fff;
    .addressCotent {
        display: flex;
        flex-direction: column;
        padding: 0 0.75rem;
        .addressCotentItem {
            position: relative;
            display: flex;
            align-items: center;
            height: 3.5625rem;
            background: #fff;
            &:before {
                position: absolute;
                content: " ";
                display: block;
                bottom: 0;
                width: 100%;
                height: 0.0625rem;
                background: #e5e5e5;
            }
            p {
                width: 4.375rem;
                font-size: 0.875rem;
                text-align: justify;
            }
            img {
                width: 1.125rem;
                height: 1.125rem;
            }
            input {
                flex: 5;
                padding: 0;
                margin: 0;
                border: 0;
            }
        }
    }
}

.saveAddress {
    position: fixed;
    padding: 0;
    margin: 0;
    bottom: 0;
    width: 100%;
    height: 3.125rem;
    background: #222;
    color: #fff;
    border: 0;
    font-size: 1rem;
    border-radius: 0;
}