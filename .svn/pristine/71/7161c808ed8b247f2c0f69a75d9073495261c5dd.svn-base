@import './common.less';
@import '../../../../css/page/common.less';
.topBar("../../../../img/topBack-ico.png");
.mui-content {
    //  .detailCard(); 
        .detailCard{
            margin-top: 0.625rem;
        } 
    .detailCard {
        display: flex;
        flex: 1;
        height: 5.9375rem;
        padding: 1.25rem 0 0.9375rem;
        background: #fff;
        border-bottom: 0.0625rem solid #E5E5E5;
        .detailCardItem {
            display: flex;
            flex: 1;
            flex-direction: column;
            color: #F0AD4E;
            justify-content: center;
            text-align: center;
            &:after{
                content: ' ';
                position: absolute;
                display: block;
                background: #e5e5e5;
                height: 2.8125rem;
                width: 0.0625rem;
            }
            .CardItemMoney{
                display: flex;
                justify-content: center;
                font-size: 2.25rem;
                color: #d7b374;
            }
            .CardItemtit{
                display: flex;
                flex: 1;
                align-items: center;
                justify-content: center;
                font-size: 0.875rem;
                color: #333;
                img{
                    height: 1.375rem;
                    width: 1.375rem;
                }
            }
        }
        .detailCardItem:first-child{
            &:after{
                width: 0;
            }
        }
    }
    .detailPageTit();
    .clickItem();
    .wrapperList(8.75rem, 0, none, block);
}