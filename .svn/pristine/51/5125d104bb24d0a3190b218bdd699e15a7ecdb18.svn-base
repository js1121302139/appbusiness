@import "../common";

.isNoData(0rem, 0rem);
.topBar("../../../img/topBack-ico.png");
.wrapperList {
    top: 4.125rem;
    bottom: 0;
    .pullDown {
        display: none;
    }
    .pullUp,.pullUpLabel {
        display: none;
    }
    .listItem {
        display: flex;
        flex-direction: column;
        padding: 0.9375rem 0.75rem 0.9375rem;
        margin-bottom: 0.625rem;
        background-color: #fff;
        .itemInfo {
            margin-bottom: 1.25rem;
            .addrName {
                margin-bottom: 0.875rem;
                font-size: 1rem;
                color: #333;
            }
            .addressInfo {
                display: flex;
                align-items: center;
                font-size: 0.8125rem;
                color: #333;
                img {
                    width: 0.75rem;
                    height: 0.75rem;
                    margin-right: 0.1875rem;
                }
            }
        }
        .fun {
            display: flex;
            flex: 1;
            align-items: center;
            .checkAdd {
                height: 1.0625rem;
                margin-right: 4.6875rem;
                label {
                    font-size: 0.8125rem;
                    padding: 0;
                    padding-left: 0.875rem;
                    color: #333333;
                }
                input {
                    left: 0;
                    right: 0;
                    top: -2px;
                    width: 0.75rem;
                    height: 0.75rem;
                    &:before{
                           
                        font-size: 12px;
                        color: #d6aa04;
                    }
                    &:checked:before{
                         content: '\e442';
                        font-size: 12px;
                        color: #d6aa04;
                    }
                }
            }
            button{
                padding: 0;
                width: 5.0625rem;
                height: 1.4375rem;
               
                border-radius:1rem ;
            }
            button:active{
                background: #ccc;
            }
            .editAdd {
                background: #333;
                color: #fff;
                 border: none;
                 margin-right: 1.25rem;
            }
            .delAdd {
                color: #e5e5e5;
            }
        }
    }
}