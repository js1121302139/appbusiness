<!doctype html>
<html>

	<head>
		<meta charset="UTF-8">
		<title></title>
		<meta name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1,maximum-scale=1,user-scalable=no" />
		<link href="../../css/mui.min.css" rel="stylesheet" />
		<link rel="stylesheet" type="text/css" href="../../css/page/work/changeShop.css" />

	</head>

	<body>
		<header class="mui-bar topBar mui-bar-nav" style="background: #fff;">
			<a class="mui-action-back topBack-ico mui-pull-left"></a>
			<h1 class="mui-title">切换店铺</h1>
		</header>
		<div class="mui-content">
			<ul class="mui-table-view" id="shopList">

			</ul>
		</div>
		<script src="../../js/mui.min.js"></script>
		<script type="text/javascript" src="../../js/muihelper.js"></script>
		<script type="text/javascript">
			mui.plusReady(function() {
				var shops = null;
				function getShops() {
					var html = "";
					var sendData = {
						config: {
							"token": Fun_App.getdata("token")
						},
						fun_Success: function(data) {
							if(data.success) {
								var datas = shops = data.data;
								for(var i = 0; i < datas.length; i++) {
									html +=
										'<li class="mui-table-view-cell" id="' + datas[i].merchantId + '">' +
										'<img src="' + picservice + datas[i].shopLogo + '" />' +
										'<span class="shopName">' + datas[i].merchantName + '</span>' +
										'</li>'
								}
								shopList.innerHTML = html;
							}
						}
					};
					Fun_App.ExAjax("merchant/getMerchants", sendData)
				}

				function changeShop(id) {
					var sendData = {
						config: {
							"token": Fun_App.getdata("token"),
							"merchantId": id //切换商户的ID
						},
						fun_Success: function(data) {
							if(data.success) {
								Fun_App.storagedata("token", data.data.token)
								console.log(Fun_App.getdata("token"));
								detailPage = plus.webview.getWebviewById('page/work/home.html');
								mui.fire(detailPage, "getindexData")
								detailPage = plus.webview.getWebviewById('page/order/myorder.html');
								mui.fire(detailPage, "getMyOrderTop")
								detailPage = plus.webview.getWebviewById('page/order/myorder.html');
								mui.fire(detailPage, "myOrderList")
								detailPage = plus.webview.getWebviewById('page/account/myaccount.html');
								mui.fire(detailPage, "getInfodata")
								mui.back()
							}
						}
					};
					Fun_App.ExAjax("merchant/switchMerchant", sendData)
				}
				getShops()
					if(shops.length>1){						
						mui("#shopList").on("tap", ".mui-table-view-cell", function() {
							var shopId = this.getAttribute("id")
							changeShop(shopId);
						})
					}
			})
		</script>
	</body>

</html>