@import "./common.less";
.topBar("../../img/topBackB-ico.png");
html,body{
  height: 100%;
  background: url("../../images/login-bg.png");
  background-size: cover;
}
.mui-icon{
  font-family: Muiicons !important;
}
.mui-content,.mui-input-group,.topBar{
  background: none !important;
}
.topBar{
  box-shadow: none;
  *{
    color: #fff !important;
  }
}
.mui-content{
  .loginTop-box{
    margin-top: 118px;
    display: flex;
    flex: 1;
    justify-content: center;
    margin-bottom: 31px;
    .wh(100%,85px);
    #loginLogo{
      width: 85px;
    }
  }
  .login-box{
    display: flex;
    flex: 1;
    width: 100%;
    flex-direction: column;
    padding: 0 37.5px;
    .mui-icon{
      display: block;
      position: static;
      width: auto;
      height: auto;
      &:before{
        color: #fff;
      }
    }
    .mui-active{
      &:before{
        color: #333;
      }
    }
    span{
      color: #fff;
    }
    .userPhoneCode{
      display: flex;
      flex: 1;
      width:100%;
      justify-content: space-between;
      a{
        position: relative;
        display: flex;
        flex: 1;
        height: 100%;
        justify-content: center;
        color: #fff;
        &:before{
          content: " ";
          .wh(1px,25px);
          display: block;
          position: absolute;
          left:0;
          top:0;
          bottom:0;
          margin: auto ;
          background-color: #fff;
        }
      }
      input{
        padding: 10px 0;
        flex: 2;

      }
    }
    div{
      display: flex;
      flex: 1;
      flex-direction: row;
      align-items: center;
      padding-left: 15px;
      border-bottom: 1px solid #fff;
      .userPhoneNumberIco{
        background: url("../../img/loginPhoneNum-ico.png") center;
        background-size: 22px 22px;
      }
      .userPwdIco{
        background: url("../../img/loginPwd-ico.png") center;
        background-size: 22px 22px;
      }
      .userPhoneCodeIco{
        background: url("../../img/loginPhoneCode-ico.png") center;
        background-size: 22px 22px;
      }
      span{
        display: block;
        .wh(22px,22px);

      }

    }
    input{
      margin: 0;
      padding: 0;
      background: none;
      color: #fff;
      text-indent: 24px;
    }
  }
  .forgetpassword{
    padding: 0 37.5px;
    margin-top: 15px;
    margin-bottom: 28px;
    a{
      color: #fff;
    }
  }
  .login_local{
    padding: 0 37.5px;
    a{
      display: block;
      height: 40px;
      line-height: 40px;
      font-size: 18px;
      border-radius: 5px;
      background-color: #fff;
      color: #333;
    }
  }
}
.sureBtn{
  padding: 0 37.5px;
  margin-top: 30px;
  height: 40px;
  a{
    display: block;
    background-color: #fff;
    line-height: 40px;
    border-radius: 5px;
    font-size: 16px;
    color: #333;
  }
}