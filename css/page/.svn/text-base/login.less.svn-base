@import "common";
html,body{
  height: 100%;
  background: url("../../images/login-bg.png");
  background-size: cover;
  overflow: hidden;
}
.mui-icon{
  font-family: Muiicons !important;
}
.mui-content,.mui-input-group,.topBar{
  background: none !important;
}
.topBar{
  box-shadow: none;
  *{
    color: #fff !important;
  }
}
.mui-content{
  .loginTop-box{
    margin-top: 118px;
    display: flex;
    flex: 1;
    justify-content: center;
    margin-bottom: 3.81rem;
    .wh(100%,10.18rem);
    #loginLogo{
      width: 10.18rem;
    }
  }
  .login-box{
    display: flex;
    flex: 1;
    width: 100%;
    flex-direction: column;
    padding: 0 37.5px;
    .mui-icon{
      display: block;
      position: static;
      width: auto;
      height: auto;
      &:before{
        color: #fff;
      }
    }
    .mui-active{
      &:before{
        color: #333;
      }
    }
    span{
      color: #fff;
    }
    div{
      display: flex;
      flex: 1;
      flex-direction: row;
      align-items: center;
      padding-left: 15px;
      border-bottom: 1px solid #fff;
      .userPhoneNumberIco{
        background: url("../../img/loginPhoneNum-ico.png") center;
        background-size: 22px 22px;
      }
      .userPwdIco{
        background: url("../../img/loginPwd-ico.png") center;
        background-size: 22px 22px;
      }

      span{
        display: block;
        .wh(22px,22px);

      }

    }
    input{
      margin: 0;
      padding: 0;
      background: none;
      color: #fff;
      text-indent: 24px;
    }
  }
  .forgetpassword{
    padding: 0 37.5px;
    margin-top: 15px;
    margin-bottom: 28px;
    a{
      color: #fff;
    }
  }
  .login_local{
    padding: 0 37.5px;
    a{
      display: block;
      height: 40px;
      line-height: 40px;
      font-size: 18px;
      border-radius: 5px;
      background-color: #fff;
      color: #333;
    }
  }
}