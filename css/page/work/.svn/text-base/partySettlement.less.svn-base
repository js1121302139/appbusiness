@import "../common.less";
.topBar {
    background-color: #000;
    * {
        color: #fff !important;
    }
}

header {
    display: flex;
    .wh(100%, 190px);
    padding: 32px 12px 12px;
    background: url(../../../images/budgetAdmin-bg.png);
    background-size: 100% 11.87rem;
    flex-direction: column;
    p,
    a,
    span {
        color: #fff !important;
    }
    .topNav {
        display: flex;
        justify-content: space-between;
        align-items: center;
        .topBack-ico {
            display: inline-block;
            .wh(20px, 20px);
            background: url("../../../img/topBackB-ico.png")center center no-repeat;
            background-size: contain;
        }
    }
    .settlementInfo {
        display: flex;
        flex: 1;
        width: 100%;
        .settlementInfoL {
            display: flex;
            flex: 1;
            width: 100%;
            margin-top: 17.5px;
            flex-direction: column;
            p {}
            .orderMoney {
                b {
                    position: relative;
                    font-size: 36px;
                    margin-right: 10px;
                    span {
                        display: block;
                        text-align: center;
                        line-height:1.03rem ;
                        top: -0.93rem;
                        right: -2.81rem;
                        position: absolute;
                        font-size: 0.68rem ;
                        .wh(2.9rem, 
                        1.03rem);
                        line-height: 1.03rem;
                        border-radius: 0.5rem 0.5rem 0.5rem 0;
                        background-color: #D7B374;
                    }
                }
            }
            .orderNum {
                margin-top: 1.18rem;
                font-size: 1rem;
            }
        }
        .settlementInfoR {
            width: 97px;
            background: url("../../../images/partySettlementEnd-bg.png") bottom no-repeat;
            background-size: 6.06rem 4.62rem;
            padding-bottom: 0.75rem;
        }
    }
}

.wrapperList {
    height: 29.75rem !important;
    .pullDown {
        display: none;
    }
    .pullUp {
        display: none !important;
    }
    .wrapperListItem {
        list-style: none;
        padding: 0 0.75rem;
        background-color: #fff;
        font-size: 0.81rem;
        color: #333;
        margin-bottom: 0.62rem;
        .ListItem-Tit {
            display: flex;
            flex: 1;
            .wh(100%,
            2.375rem);
            line-height: 2.375rem;
            border-bottom: 1px solid #e5e5e5;
            div {
                flex: 1;
            }
            .itemTit-orderDate {
                color: #999;
            }
        }
        .ListItem-Info {
            height: 5.4375rem;
            display: flex;
            flex: 1;
            .wh(100%,
            87px);
            .order-People {
                width: 165px;
                display: flex;
                flex: 1;
                align-items: center;
                flex-direction: row;
                .order-PeopleImg {
                    .wh(2.56rem,
                    2.56rem);
                    margin-right: 0.62rem ;
                    border-radius: 1.28rem;
                    img {
                        .wh(2.56rem,
                        2.56rem);
                    }
                }
            }
            .order-Income {
                padding: 15px 0;
                display: flex;
                flex-direction: column;
                align-content: space-around;
                p {
                    display: flex;
                    flex: 1;
                    width: 100%;
                    align-items: center;
                    margin: 0;
                    color: #333;
                    span {
                        color: #D7B374;
                    }
                }
            }
        }
    }
}