@import "../common";
.topBar("../../../img/topBack-ico.png");
.mui-plus .plus {
    display: inline;
}

.plus {
    display: none;
}

#topPopover {
    position: fixed;
    top: 16px;
    right: 6px;
}

#topPopover .mui-popover-arrow {
    left: auto;
    right: 6px;
}

p {
    text-indent: 22px;
}

span.mui-icon {
    font-size: 14px;
    color: #007aff;
    margin-left: -15px;
    padding-right: 10px;
}

.mui-popover {
    height: 300px;
}

.mui-content {
    padding: 10px;
}

.mui-popover.mui-active {
    top: 21% !important;
    left: 5% !important;
    width: 90%;
}

.mui-content {
    font-family: "黑体";
    //结算方式
    .mui-input-row {
        input:before {
            color: #222 !important;
        }
    }
    .mine-cash-top {
        .mui-checkbox input[type=checkbox]:before,
        .mui-radio input[type=radio]:before {
            font-size: 1.5rem;
            top: 0.5rem;
        }
        .mui-checkbox input[type=checkbox]:checked:before,
        .mui-radio input[type=radio]:checked:before {
            font-size: 1rem;
            color: #fe7700;
        }
        .mui-checkbox input[type=checkbox],
        .mui-radio input[type=radio] {
            top: 0.5rem;
            width: 1rem;
            height: 1rem;
        }
        .mui-card {
            -webkit-box-shadow: none;
            box-shadow: none;
            margin: 10px 0;
            .cardName {
                font-size: 0.81rem;
            }
        }
        img {
            border: 0;
            width: 30%;
            position: absolute;
            bottom: 0.75rem;
            right: 3.4rem;
        }
    }
    //结算内容
    .mine-cash-middle {
        display: flex;
        flex-direction: column;
        padding: 12.5px 29px 15px;
        background-color: #fff;
        .topMoney {
            display: flex;
            flex: 1;
            width: 100%;
            margin-bottom: 25px;
            justify-content: space-between;
            align-items: center;
            .allMoney {
                font-size: 0.93rem;
            }
            .setMoney {
                .wh(88px, 25px);
                padding: 0;
                line-height: 25px;
                background-color: #222;
                color: #fff;
                font-size: 12px;
            }
            .isMoney {
                text-indent: 0;
                font-size: 18px;
                color: #D7B374;
            }
        }
        .cashMiddleItem {
            display: flex;
            flex: 1;
            .wh(100%, 40px);
            margin-bottom: 25px;
            justify-content: space-between;
            align-items: center;
            flex-direction: row;
            input {
                height: 40px;
                margin: 0;
                padding-left: 4px;
                background-color: #f5f5f5;
                border-radius: 0;
                border: none;
            }
            h1 {
                font-size: 15px;
                color: #333;
            }
            .phoneNumCode {
                display: flex;
                justify-content: space-between;
                align-items: center;
                .wh(100%, 40px);
                input {
                    width: 88px;
                }
                .phoneNumCodeRight {
                    width: 205px;
                    align-items: center;
                    display: flex;
                    justify-content: space-between;
                }
            }
            .bigInput {
                .wh(205px, 40px);
                padding-left: 0.25rem;
            }
            .getPhoneCode {
                .wh(100px, 25px); 
                padding: 0; 
                line-height: 25px;
                background-color: #222;
                color: #fff;
                font-size: 12px;
            }
        }
        .phoneNum {
            display: flex;
            flex: 1;
            flex-direction: column;
            .wh(100%, 50px);
            .phoneNumCodePrompt {
                flex: 1;
                margin-top: 5px;
                align-self: flex-end;
                font-size: 12px;
                color: #999;
            }
        }
    }
    .cashMiddleItem:last-child {
        margin-bottom: 0;
    }
}

.footerButton {
    margin-top: 32.5px;
    display: flex;
    justify-content: center;
    width: 100%;
    height: 40px;
    background-color: #222;
    z-index: 9999;
    font-size: 18px;
    color: #fff;
    border-radius: 5px;
}