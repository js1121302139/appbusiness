@import "../common";
.topBar("../../../img/topBackB-ico.png");
.topBar {
    background: url("../../../images/evaluateBg.png") left top no-repeat;
    background-size: 100% 5.375rem;
    box-shadow: none;
    height: 5.375rem;
    * {
        color: #fff !important;
    }
}

html,
body,
#evaluatemange
{
    height: 100%;
    min-height: 100%;
    overflow: hidden;
    background: #fff;
}

.evaluateStar(@url1,
@url2,
@boxWidth,
@wh,
@marginR) {
    .evaluateStar {
        display: flex;
        width: @boxWidth;
        justify-content: space-between;
        position: relative;
        .evaluateStarsLine {
            .wh(@wh,
            @wh);
            background-image: url(@url1);
            background-position-y: 0px;
            background-size: @wh @wh;
        }
        .evaluateStars {
            position: absolute;
            width: 100%;
            left: 0;
            .evaluateStarsitem {
                .wh(@wh,
                @wh);
                float: left;
                margin-right: @marginR;
                background-image: url(@url2);
                background-position-y: 0px;
                background-size: @wh @wh;
            }
            .evaluateStarsitem5{
                .wh(@wh,
                @wh);
                float: left;
                margin-right: @marginR;
                background-image: url('../../../img/bigStar-ico.5.png') !important;
                background-position-y: 0px;
                background-size: @wh @wh;
            }
            .evaluateStarsitem:last-child {
                margin-right: 0;
            }
        }
    }
}

.evaluateBox {
    position: fixed;
    width: 100%;
    padding: 0 0.75rem;
    top: 4.53rem;
    z-index: 9999;
}

.evaluate-top {
    display: flex;
    flex: 1;
    align-items: center;
    justify-content: space-between;
    padding: 0 0.3125rem 0 0.625rem;
    height: 3.125rem;
    margin: 0 auto;
    box-shadow: 0px 0.25rem 0.4375rem 0.125rem rgba(184, 184, 184, 0.41);
    border-radius: 5px;
    z-index: 9999;
    background-color: #fff;
    font-size: 0.9375rem;
    .evaluateCount {
        text-indent: 1.75rem;
        height: 1.37rem;
        line-height: 1.375rem;
        color: #333;
        background: url("../../../img/evaluate-ico.png") left center no-repeat;
        background-size: 1.37rem 1.37rem;
    }
    .starLv {
        display: flex;
        .evaluateStar("../../../img/bigStarLine-ico.png",
        "../../../img/bigStar-ico.png.png",
        6.71rem,
        0.9375rem,
        0.5rem);
    }
}

.mui-content {
    background: #fff;
    margin-top: 2.93rem;
}


    .wrapperList {
        top: 7.65625rem;
    bottom: 0;
        .pullDown {
            display: none;
        }
        .wrapperListItem {
            padding: 0.75rem 0.78125rem;
            position: relative;
            background-color: #fff;
            .ListItemTop {
                display: flex;
                flex: 1;
                justify-content: space-between;
                align-items: center;
                .wh(100%,
                2.5625rem);
                margin-bottom: 0.75rem;
                img {
                    .wh(2.5625rem,
                    2.5625rem);
                    margin-right: 0.68rem;
                    border-radius: 20.5px;
                }
                .userInfo {
                    display: flex;
                    flex: 1;
                    flex-direction: column;
                    height: 1.875rem;
                    .userName {
                        align-self: flex-start;
                        margin-bottom: 0.3125rem;
                        font-size: 0.87rem;
                        color: #333;
                    }
                    .evaluateStar("../../../img/smallStarLine-ico.png.png",
                    "../../../img/smallStar-ico.png.png",
                    5.125rem,
                    0.75rem,
                    0.34375rem);
                }
                .evaluateDate {
                    align-self: flex-start;
                    padding-top: 0.34rem;
                    font-size: 0.75rem;
                    color: #999;
                }
                .evaluateMsg {
                    line-height: 1.25rem;
                }
            }
            &:after {
                position: absolute;
                content: " ";
                display: block;
                .wh(95%,
                0.0625rem);
                right: 0px;
                left: 0;
                bottom: -0.0625rem;
                margin: auto;
                background-color: #e5e5e5;
                transform: scaleY(0.5);
            }
        }
    }

.evaluateNum {
    margin-left: 0.625rem;
    font-size: 0.9375rem;
    color: #D7B374;
}
.scale1{
    transform: scale(1)!important;
}
.isNoData(0px,0rem);